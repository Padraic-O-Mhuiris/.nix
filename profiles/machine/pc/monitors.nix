{ config, lib, pkgs, ... }:

{
  environment.systemPackages = with pkgs; [ autorandr ];

  services.udev.extraRules = ''
    ACTION=="change", SUBSYSTEM=="drm", RUN+="${pkgs.autorandr}/bin/autorandr -c"'';

  services.autorandr = {
    enable = true;

    profiles = {
      "default" = {
        fingerprint = {
          "DP-0" =
            "";
          "HDMI-0" =
            "";

        };
        config = {
          "DP-0" = {
            enable = true;
            primary = true;
            position = "0x0";
            mode = "5120x1440";
            rate = "60.00";
          };
          "HDMI-0" = {
            enable = true;
            primary = false;
            # position = "1920x0";
            mode = "1920x1080";
            rotate = "right";
            rate = "60.00";
          };
        };
      };
    };
  };
}
